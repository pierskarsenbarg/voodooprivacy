{
  "variables": {
    "aws_access_key": "",
    "aws_secret_key": "",
    "ipsec_key": "",
    "vpn_username": "",
    "vpn_password": ""
  },
  "builders": [{
    "type": "amazon-ebs",
    "access_key": "{{user `aws_access_key`}}",
    "secret_key": "{{user `aws_secret_key`}}",
    "region": "eu-west-1",
    "source_ami": "ami-47a23a30",
    "instance_type": "t2.micro",
    "ssh_username": "ubuntu",
    "ami_name": "voodoo-privacy {{timestamp}}"
  }],
  "provisioners": [{
    "type": "shell",
    "script": "../voodoo-vpn.sh",
    "execute_command": "echo 'packer' | {{ .Vars }} sudo -E -S sh '{{ .Path }}'",
    "environment_vars": [
      "IPSEC_KEY={{user `ipsec_key`}}",
      "VPN_USER={{user `vpn_username`}}",
      "VPN_PASSWORD={{user `vpn_password`}}"
    ]
    }]
}
